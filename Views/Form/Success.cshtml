@{
    ViewData["Title"] = "Success";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<div class="d-flex justify-content-center align-items-center" style="min-height:80vh; background:linear-gradient(135deg,#eef2ff,#f8fff4);">

    <div class="card shadow-lg border-0 text-center p-5" style="max-width:520px; width:100%; border-radius:20px;">

        <!-- Animated Tick -->
        <div class="mb-4">
            <div class="success-circle">
                <i class="bi bi-check-lg"></i>
            </div>
        </div>

        <h2 class="fw-bold text-success">Application Submitted!</h2>

        <p class="text-muted mt-2 mb-4">
            Your form has been successfully submitted. <br />
            Our team will review your details shortly.
        </p>

        <div class="d-grid gap-2">

            <a href="/Form/PersonalDetails" class="btn btn-success btn-lg">
                <i class="bi bi-plus-circle"></i> Submit Another Application
            </a>

            <a href="/Admin/Index" class="btn btn-outline-dark">
                <i class="bi bi-speedometer2"></i> Go To Admin Panel
            </a>

        </div>

    </div>
</div>


<style>

    /* SUCCESS CIRCLE */
    .success-circle {
        width: 120px;
        height: 120px;
        margin: auto;
        border-radius: 50%;
        background: linear-gradient(135deg,#28a745,#6fda44);
        display: flex;
        justify-content: center;
        align-items: center;
        box-shadow: 0 10px 30px rgba(40,167,69,0.35);
        animation: pop 0.6s ease;
    }

        .success-circle i {
            color: white;
            font-size: 65px;
            animation: tick 0.7s ease;
        }

    /* RAZOR SAFE ANIMATIONS */
    @@keyframes pop {
        0% {
            transform: scale(0.4);
            opacity: 0;
        }

        80% {
            transform: scale(1.15);
        }

        100% {
            transform: scale(1);
        }
    }

    @@keyframes tick {
        0% {
            transform: scale(0);
        }

        70% {
            transform: scale(1.35);
        }

        100% {
            transform: scale(1);
        }
    }

    /* BUTTON HOVER EFFECT */
    .btn-success {
        transition: 0.25s;
    }

        .btn-success:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(40,167,69,0.4);
        }

</style>
