@model MultiStepFormApp.Models.FormEntry
@using System.Text.Json
@using MultiStepFormApp.Models

@{
    ViewData["Title"] = "Delete Applicant";
    var educations = string.IsNullOrEmpty(Model.EducationJson)
    ? new List<EducationDetail>()
    : JsonSerializer.Deserialize<List<EducationDetail>>(Model.EducationJson);
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-5">

    ```
    <div class="card shadow-lg border-danger">

        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">
                <i class="bi bi-exclamation-triangle-fill"></i>
                Confirm Deletion
            </h4>
        </div>

        <div class="card-body">

            <div class="alert alert-warning">
                <strong>Warning!</strong> This action cannot be undone.
                You are about to permanently delete this applicant.
            </div>

            <!-- BASIC INFO -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <h5 class="fw-bold">@Model.Name</h5>
                    <p class="mb-1"><strong>Mobile:</strong> @Model.Mobile</p>
                    <p class="mb-1"><strong>Age:</strong> @Model.Age</p>
                    <p class="mb-1"><strong>Gender:</strong> @Model.Gender</p>
                </div>

                <div class="col-md-6">
                    <p class="mb-1"><strong>State:</strong> @Model.CorrState</p>
                    <p class="mb-1"><strong>District:</strong> @Model.CorrDistrict</p>
                    <p class="mb-1"><strong>Nationality:</strong> @Model.Nationality</p>
                </div>
            </div>

            <!-- EDUCATION SUMMARY -->
            <div class="mb-3">
                <h6 class="fw-bold">Education Records</h6>

                @if (educations.Count == 0)
                {
                    <span class="text-muted">No education data</span>
                }
                else
                {
                    <ul class="list-group">
                        @foreach (var edu in educations)
                        {
                            <li class="list-group-item d-flex justify-content-between">
                                <span>@edu.EducationType - @edu.InstituteName</span>
                                <span class="badge bg-secondary">@edu.PassingYear</span>
                            </li>
                        }
                    </ul>
                }
            </div>

            <hr />

            <!-- ACTION BUTTONS -->
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />

                <div class="d-flex justify-content-between">

                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>

                    <button type="submit" class="btn btn-danger px-4">
                        <i class="bi bi-trash"></i> Permanently Delete
                    </button>

                </div>
            </form>

        </div>
    </div>
    ```

</div>
