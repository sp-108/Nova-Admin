@model MultiStepFormApp.Models.FormEntry
@using System.Text.Json
@using MultiStepFormApp.Models

@{
    ViewData["Title"] = "Applicant Details";

    List<EducationDetail> educations = new();

    if (!string.IsNullOrEmpty(Model.EducationJson))
    {
        try
        {
            educations = JsonSerializer.Deserialize<List<EducationDetail>>(Model.EducationJson!) ?? new();
        }
        catch
        {
            educations = new();
        }
    }
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-4">

    <!-- HEADER CARD -->
    <div class="card shadow-lg border-0 mb-4">
        <div class="card-body d-flex justify-content-between align-items-center">

            <div>
                <h2 class="fw-bold mb-0">@(Model.Name ?? "-")</h2>
                <small class="text-muted">Applicant Profile</small>

                <div class="mt-2">
                    <span class="badge bg-primary">@(Model.Gender ?? "-")</span>
                    <span class="badge bg-success">@(Model.MaritalStatus ?? "-")</span>
                    <span class="badge bg-dark">@((Model.Age.HasValue ? Model.Age.Value.ToString() : "-")) Years</span>
                </div>
            </div>

            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary me-2">
                    <i class="bi bi-pencil"></i> Edit
                </a>

                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
            </div>

        </div>
    </div>

    <!-- PERSONAL INFO -->
    <div class="card shadow-sm mb-4">
        <div class="card-header fw-bold">👤 Personal Information</div>
        <div class="card-body row">

            <div class="col-md-6">
                <p><strong>DOB:</strong> @(Model.DOB.HasValue? Model.DOB.Value.ToShortDateString() : "-")</p>
                <p><strong>Mobile:</strong> @(Model.Mobile ?? "-")</p>
                <p><strong>Aadhaar:</strong> @(Model.Aadhaar ?? "-")</p>
                <p><strong>Nationality:</strong> @(Model.Nationality ?? "-")</p>
            </div>

            <div class="col-md-6">
                <p><strong>Father:</strong> @(Model.FatherName ?? "-")</p>
                <p><strong>Mother:</strong> @(Model.MotherName ?? "-")</p>
            </div>

        </div>
    </div>

    <!-- ADDRESS -->
    <div class="row">

        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header fw-bold">📍 Correspondence Address</div>
                <div class="card-body">
                    <p>@(Model.CorrAddress ?? "-")</p>
                    <p>@(Model.CorrDistrict ?? "-"), @(Model.CorrState ?? "-")</p>
                    <p>@(Model.CorrCountry ?? "-") - @(Model.CorrPincode ?? "-")</p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header fw-bold">🏠 Permanent Address</div>
                <div class="card-body">
                    <p>@(Model.PermAddress ?? "-")</p>
                    <p>@(Model.PermDistrict ?? "-"), @(Model.PermState ?? "-")</p>
                    <p>@(Model.PermCountry ?? "-") - @(Model.PermPincode ?? "-")</p>
                </div>
            </div>
        </div>

    </div>

    <!-- EDUCATION -->
    <div class="card shadow-sm mb-4">
        <div class="card-header fw-bold">🎓 Education</div>
        <div class="card-body">

            @if (educations.Count == 0)
            {
                <p class="text-muted">No education records found</p>
            }
            else
            {
                <div class="row">
                    @foreach (var edu in educations)
                    {
                        <div class="col-md-6">
                            <div class="border rounded p-3 mb-3 bg-light">

                                <h6 class="fw-bold text-primary">@edu.EducationType</h6>

                                <p class="mb-1"><strong>Institute:</strong> @(edu.InstituteName ?? "-")</p>
                                <p class="mb-1"><strong>Board:</strong> @(edu.BoardOrUniversity ?? "-")</p>
                                <p class="mb-1"><strong>Year:</strong> @edu.PassingYear</p>
                                <p class="mb-1"><strong>Percentage:</strong> @edu.Percentage%</p>
                                <p class="mb-0"><strong>Specialization:</strong> @(edu.Specialization ?? "-")</p>

                            </div>
                        </div>
                    }
                </div>
            }

        </div>
    </div>

</div>
