@model IEnumerable<MultiStepFormApp.Models.FormEntry>

@{
    ViewData["Title"] = "Admin Panel";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<div class="container-fluid mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">📋 Applicants Dashboard</h2>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-circle"></i> New Application
        </a>
    </div>

    <!-- SEARCH BAR -->
    <div class="card shadow-sm mb-3">
        <div class="card-body">
            <input type="text" id="searchBox" class="form-control" placeholder="🔍 Search by Name / Mobile / State...">
        </div>
    </div>

    <!-- TABLE -->
    <div class="card shadow-sm">
        <div class="table-responsive">

            <table class="table table-hover align-middle mb-0" id="dataTable">

                <thead class="table-dark text-center">
                    <tr>
                        <th>Name</th>
                        <th>Mobile</th>
                        <th>Age</th>
                        <th>Gender</th>
                        <th>State</th>
                        <th>Status</th>
                        <th width="180">Actions</th>
                    </tr>
                </thead>

                <tbody class="text-center">

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@item.Name</td>
                            <td>@item.Mobile</td>
                            <td>@item.Age</td>

                            <td>
                                @if (item.Gender == "Male")
                                {
                                    <span class="badge bg-primary">Male</span>
                                }
                                else if (item.Gender == "Female")
                                {
                                    <span class="badge bg-danger">Female</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Other</span>
                                }
                            </td>

                            <td>@item.CorrState</td>

                            <td>
                                @if (item.MaritalStatus == "Married")
                                {
                                    <span class="badge bg-success">Married</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Unmarried</span>
                                }
                            </td>

                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">
                                    <i class="bi bi-pencil"></i>
                                </a>

                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1">
                                    <i class="bi bi-eye"></i>
                                </a>

                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>

            </table>
        </div>
    </div>

</div>

@section Scripts {

    <script>

        document.getElementById("searchBox").addEventListener("keyup", function () {

            let value = this.value.toLowerCase();
            let rows = document.querySelectorAll("#dataTable tbody tr");

            rows.forEach(row => {
                row.style.display =
                    row.innerText.toLowerCase().includes(value) ? "" : "none";
            });

        });

    </script>

}
